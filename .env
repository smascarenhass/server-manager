# Server Manager - Configurações do Ambiente

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Configurações do Banco de Dados
DATABASE_URL=postgresql://user:password@localhost:5432/server_manager
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/server_manager_test

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configurações do RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Configurações de Segurança
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=logs/server_manager.log

# Configurações de Comandos
COMMAND_TIMEOUT=30
COMMAND_WORKING_DIR=/home/server

# Configurações de Desenvolvimento
DEBUG=true
ENVIRONMENT=development 